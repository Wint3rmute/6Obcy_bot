{
  "manifest_version": 2,

  "name": "6Obcy Bot",
  "description": "Bot wyszukujący kobiety lub mężczyzn na stronie 6obcy",
  "version": "1.1",

  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_popup": "html/control.html",
    "default_title": "6Obcy Bot"
  },
  "icons": { "16": "img/icon16.png",
           "48": "img/icon48.png",
          "128": "img/icon128.png" },
  "permissions": [
    "activeTab",
    "notifications"
  ],

  "web_accessible_resources": [
    "script/bot.js",
    "script/control.js"
  ],

  "content_scripts": [
   {
     "matches": ["https://6obcy.org/rozmowa"],
     "js": ["script/script.js", "script/jquery-3.2.1.min.js"]
   }
 ]
}
